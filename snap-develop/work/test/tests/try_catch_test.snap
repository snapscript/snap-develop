
function testThrowString(){
	try {
		throw "A string";
	}catch(e){
	   println(e);
	   println(e.class);
		assert e == "A string";
	}
}

function testThrowException() {
	try {
		throw new IllegalStateException("Some text");
	} catch(e) {
		e.printStackTrace();
		assert e.message == "Some text";
	}
}

function testNullPointerException() {
	try {
	   var x = null;
	   x.toString();
	} catch(e) {
		e.printStackTrace();
	   assert e.message == "Reference to a null object";
	}
}

function testNullPointerException() {
	try {
	   var x = "xx";
	   x++;
	} catch(e) {
		e.printStackTrace();
	}
}

function testMultipleCatchException(){
   var caught = null;
   try {
      throw 1;
   }catch(e: Boolean){
      caught = "Boolean";
   }catch(e: Integer){
      caught = "Integer";
   }catch(e: Exception){
      caught = "Exception";
   }
   println(caught);
   assert caught == "Integer";
}